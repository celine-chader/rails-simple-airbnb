<h1><%= @flat.name %></h1>
<p><strong>Adress -</strong> <%= @flat.address %></p>
<p><strong>Description -</strong> <%= @flat.description %></p>
<p><strong>Price per night -</strong> <%= @flat.price_per_night %></p>
<p><strong>Number of guests -</strong> <%= @flat.number_of_guests %></p>

<div>
  <%= link_to edit_flat_path, class:"text-decoration-none" do %>
    <button class="btn btn-success mt-4 text-end"><i class="fa-sharp fa-solid fa-pen"></i> Edit the flat</button>
  <% end %>
</div>

<%= link_to flat_path(@flat), class:"text-decoration-none", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
  <button class="btn btn-danger mt-4 text-end"><i class="fa-sharp fa-solid fa-skull-crossbones"></i> Delete the flat</button>
<% end %>

<div>
  <%= link_to flats_path do %>
    <button class="btn btn-outline-primary mt-4 text-end">Back to flats</button>
  <% end %>
</div>
