<h1 class="mt-3">Add your flat</h1>

<%= simple_form_for(@flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests %>
  <%= f.submit class:"btn btn-primary" %>
<% end %>

<div>
<%= link_to "Back to flats", flats_path, class: "btn btn-outline-primary mt-4" %>
</div>
